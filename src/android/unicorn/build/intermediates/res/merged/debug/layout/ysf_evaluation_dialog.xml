<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/ysf_evaluation_dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/ysf_custom_dialog_padding_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:text="@string/ysf_evaluation_tips"
                android:textColor="@color/ysf_grey_666666"
                android:textSize="@dimen/ysf_dialog_normal_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ysf_dialog_light_line_size"
                android:layout_marginTop="35dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ysf_custom_dialog_padding_vertical"
                android:layout_marginRight="@dimen/ysf_custom_dialog_padding_vertical"
                android:layout_marginTop="@dimen/ysf_custom_dialog_padding_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ysf_evaluation_dialog_dissatisfied"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/ysf_evaluation_dialog_btn_dissatisfied_bg"
                    android:text="@string/ysf_evaluation_dissatisfied"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ysf_dialog_normal_text_size" />

                <Button
                    android:id="@+id/ysf_evaluation_dialog_satisfied"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/ysf_evaluation_dialog_btn_satisfied_bg"
                    android:text="@string/ysf_evaluation_satisfied"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ysf_dialog_normal_text_size" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ysf_evaluation_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/ysf_evaluation_dialog_close" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/ysf_evaluation_dialog_light" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ysf_evaluation_praise_bg"
        android:scaleType="centerInside"
        android:src="@drawable/ysf_evaluation_dialog_praise" />
</FrameLayout>